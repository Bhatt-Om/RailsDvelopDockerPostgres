<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Address line 1:</strong>
    <%= user.address_line_1 %>
  </p>

  <p>
    <strong>Address line 2:</strong>
    <%= user.address_line_2 %>
  </p>

  <p>
    <strong>Country:</strong>
    <%= user.country %>
  </p>

  <p>
    <strong>State:</strong>
    <%= user.state %>
  </p>

  <p>
    <strong>City:</strong>
    <%= user.city %>
  </p>

  <p>
    <strong>Pincode:</strong>
    <%= user.pincode %>
  </p>

</div>
